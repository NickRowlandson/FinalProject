<!-- Edit User Page (Admin Only) -->

<% include ../partials/header.ejs %>

<main class="row">
    <h3><strong>Edit Profile</strong></h3>
    <div class="col s6">
        <form method="post">

                <label for="firstName">First Name: *</label>
                <input name="firstName" type="text" class="form-control" required value="<%= user.firstName %>" autofocus/>
 
                <label for="lastName">Last Name: *</label>
                <input name="lastName" type="text" class="form-control" required value="<%= user.lastName %>" />

                <label for="username">Email: *</label>
                <input name="username" type="email" class="form-control" required value="<%= user.email %>" />

                <label for="password">Password: *</label>
                <input name="password" type="password" class="form-control" required />
                
                <br  \>

                <button type="submit" class="waves-effect waves-light btn" title="Update">
                    <i class="fa fa-pencil-square-o"></i>
					 Update
				</button>
                
        </form>
    </div>
</main>

