<!-- Edit User Page (Admin Only) -->

<% include ../partials/header.ejs %>

<main class="panel panel-default">
    <h3><strong>Edit a User</strong></h3>
    <div class="panel-body">
        <form method="post">
            <fieldset class="form-group">
                <label for="firstName">First Name: *</label>
                <input name="firstName" type="text" class="form-control" required value="<%= user.firstName %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="lastName">Last Name: *</label>
                <input name="lastName" type="text" class="form-control" required value="<%= user.lastName %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="username">Email: *</label>
                <input name="username" type="email" class="form-control" required value="<%= user.email %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="password">Password: *</label>
                <input name="password" type="password" class="form-control" required autofocus/>
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="waves-effect waves-light btn" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/users/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="waves-effect waves-light btn" style="background-color:red;">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/users" title="Cancel"  class="waves-effect waves-light btn">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>
<% include ../partials/boot.ejs %>
<% include ../partials/footer.ejs %>
