<% include partials/header.ejs %>

	<main class="row">
		<% for (var i = 0; i < survey.length; i++) { %>
		<h3><strong><%= survey[i].name %></strong></h3>
			<div class="col s6">
				<% if(survey[i].type == "Agree/Disagree") { %>
					<form method="post">
							<% for (var j = 0; j < survey[i].questions.length; j++) { %>
								
								<h5>
									<%= "Question" + " " + (j+1) + ":" %> 
								</h5>
								<h6> 
									<%= survey[i].questions[j].text %>
								</h6>
								<p>
								<input name="answer<%= j %>" type="radio" id="true<%= j+1 %>" required/>
								<label for="true<%= j+1 %>">Agree</label>
								</p>
								<p>
								<input name="answer<%= j %>" type="radio" id="false<%= j+i %>" required />
								<label for="false<%= j+i %>">Disagree</label>
								</p>
								
							<% } %>
							<button class="btn waves-effect waves-light" type="submit" name="action">Submit
								<i class="material-icons right">send</i>
							</button>
		
					</form>
				<% } else {%>
					<form method="post">
						<% for (var j = 0; j < survey[i].questions.length; j++) { %>
							
							<h5>
								<%= "Question" + " " + (j+1) + ":" %> 
							</h5>
							<h6> 
								<%= survey[i].questions[j].text %>
							</h6>
							<% for (var a = 0; a < survey[i].questions[j].options.length; a++) { %>
								<p>
								<input name="answer<%= j %>" type="radio" id="option<%= j+1 %>" required/>
								<label for="option<%= j+1 %>"><%= survey[i].questions[j].options[a].text %></label>
								</p>
							<% } %>
						<% } %>
						<button class="btn waves-effect waves-light" type="submit" name="action">Submit
							<i class="material-icons right">send</i>
						</button>
	
					</form>
				<% } %>
			</div>
		<% } %>
	</main>
	
<% include partials/boot.ejs %>
<% include partials/footer.ejs %>
