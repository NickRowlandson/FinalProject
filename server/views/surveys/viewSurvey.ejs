<!-- View Survey Page -->

<% include ../partials/header.ejs %>

    <h3><strong>Your Surveys</strong></h3>
    <a href="/survey/create" title="Create Survey" style="color:#0079B4;"><i class="fa fa-plus-circle"></i> Create Survey</a>
    <% if (surveys.length > 0) { %>
        <table class="responsive-table striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Options</th>
                    <th>Date Created</th>
                    <th>Date Updated</th>
                    <th></th>
                </tr>
            </thead>
            </tbody>
            <% for (var i = 0; i < surveys.length; i++) { %>
            <tr>
                <td>
                    <%= surveys[i].name %>
                </td>
                <td>
                    <%= surveys[i].description %>
                </td>
                <td>
                    <%= surveys[i].type %>
                </td>
                <td>
                    <% var date = new Date(surveys[i].created);
                        var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                    <%= dateString %>
                </td>
                <td>
                    <% date = new Date(surveys[i].updated);
                        var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                    <%= dateString %>
                </td>
                <td>
                    <a href="/survey/<%= surveys[i]._id %>" title="Edit" class="waves-effect waves-light btn">
                        <i class="fa fa-pencil-square-o"></i>
                    </a>
                    <a href="/survey/delete/<%= surveys[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="waves-effect waves-light btn" style="background-color:red;">
                        <i class="fa fa-trash-o"></i>
                    </a>
                    <a href="/survey/review/<%= surveys[i]._id %>" title="Review Stats" class="waves-effect waves-light btn" style="background-color:#9535f4;">
                        <i class="fa fa-bar-chart-o"></i>
                    </a>
                </td>   
            </tr>
            <% } %>
            </tbody>
        </table>
    <% } %>
	
<% include ../partials/boot.ejs %>
<% include ../partials/footer.ejs %>
