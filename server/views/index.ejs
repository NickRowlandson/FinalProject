PROJECT:    SURV-EZ.COM (Create your own survey)
BY:         Nicholas Rowlandson & Tim Harasym
PURPOSE:    This application allows a user to register and login as an authenticated user. 
            From there the user can choose to create a survey or view/edit past surveys.
            Newly created surveys have the option of being displayed on the front page of SURV-EZ.
-->

<!-- Front Page -->

<% include partials/header.ejs %>

<main>
      <% if (messages.length > 0) { %>
      <div class="row">
            <div class="col s12">
                  <div class="card green lighten-1">
                        <div class="card-content white-text" align=center>
                              <%= messages %>
                        </div>
                  </div>
            </div>
      </div>
      <% } %> 
      <div class="row">
            <div class="col s12">
                  <h1 align="center"><strong>Welcome to Surv-EZ!</strong></h1><br \>       
            </div class="row">
            <% if (surveys.length > 0) { %>
                  <div class="col s12 z-depth-2">
                        <% for (var i = 0; i < surveys.length; i++) { %>
                              <a href="takeSurvey/<%= surveys[i]._id %>">
                                    <div class="col s4">
                                          <div class="card blue-grey darken-1">
                                                <div class="card-content white-text">
                                                      <span class="card-title"><h4><%= surveys[i].name %></h4></span>
                                                      <div class="divider"></div>
                                                      <ul>
                                                            <li><h5>Description:</h5><%= surveys[i].description %></li><br \>
                                                            <li><strong>Type:</strong> <%= surveys[i].type %></li>
                                                      </ul>
                                                </div>
                                          </div>         
                                    </div>
                              </a>
                        <% } %>
                  </div>
            <% } %>
      </div>   
</main>   
 
<% include partials/boot.ejs %>
<% include partials/footer.ejs %>
